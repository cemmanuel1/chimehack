<h1>Listing profiles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Newsfeed</th>
    <th>Twitter</th>
    <th>Facebook</th>
    <th>Quote</th>
    <th>Personal site</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.name %></td>
    <td><%= profile.bio %></td>
    <td><%= profile.newsfeed %></td>
    <td><%= profile.twitter %></td>
    <td><%= profile.facebook %></td>
    <td><%= profile.quote %></td>
    <td><%= profile.personal_site %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

